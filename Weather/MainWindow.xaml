        <Label Content="°C" HorizontalAlignment="Left" Height="28" Margin="432,120,0,0" VerticalAlignment="Top" Width="27"/>
        <Label Content="%" HorizontalAlignment="Left" Height="24" Margin="433,0,0,0" VerticalAlignment="Center" Width="26"/>
        <Label Content="km/h" HorizontalAlignment="Left" Height="28" Margin="433,282,0,0" VerticalAlignment="Top" Width="51"/>
        <Label Content="Hőmérséklet" HorizontalAlignment="Left" Height="24" Margin="291,88,0,0" VerticalAlignment="Top" Width="164"/>
        <Label Content="Páratartalom" HorizontalAlignment="Left" Height="23" Margin="289,164,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="Szélsebesség" HorizontalAlignment="Left" Height="30" Margin="289,234,0,0" VerticalAlignment="Top" Width="126"/>
        <Label x:Name="label1" Content="" HorizontalAlignment="Left" Height="26" Margin="290,121,0,0" VerticalAlignment="Top" Width="137" Background="#FFE4DBDB"/>
        <Label x:Name="label2" Content="" HorizontalAlignment="Left" Height="28" Margin="289,199,0,0" VerticalAlignment="Top" Width="139" Background="#FFE4E0E0"/>
        <Label x:Name="label3" Content="" HorizontalAlignment="Left" Height="28" Margin="291,282,0,0" VerticalAlignment="Top" Width="137" Background="#FFE4E1E1"/>
        <Label Content="Városok:" HorizontalAlignment="Left" Height="33" Margin="32,50,0,0" VerticalAlignment="Top" Width="154"/>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="28" Margin="582,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Background="#FFD4C09D"/>
        <TextBox x:Name="txt2" HorizontalAlignment="Left" Height="28" Margin="582,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="166" Background="#FFD4BE97"/>
        <TextBox x:Name="txt3" HorizontalAlignment="Left" Height="28" Margin="582,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Background="#FFD2BB90"/>
        <Label Content="Hőmérséklet" HorizontalAlignment="Left" Height="24" Margin="582,90,0,0" VerticalAlignment="Top" Width="164"/>
        <Label Content="Páratartalom" HorizontalAlignment="Left" Height="23" Margin="582,169,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="Szélsebesség" HorizontalAlignment="Left" Height="30" Margin="582,246,0,0" VerticalAlignment="Top" Width="126"/>
        <Label Content="°C" HorizontalAlignment="Left" Height="28" Margin="753,121,0,0" VerticalAlignment="Top" Width="27"/>
        <Label Content="%" HorizontalAlignment="Left" Height="24" Margin="754,0,0,0" VerticalAlignment="Center" Width="26"/>
        <Label Content="km/h" HorizontalAlignment="Left" Height="28" Margin="748,286,0,0" VerticalAlignment="Top" Width="51"/>
        <Label Content="Város" HorizontalAlignment="Left" Height="24" Margin="583,21,0,0" VerticalAlignment="Top" Width="164"/>

    </Grid>
</Window>
